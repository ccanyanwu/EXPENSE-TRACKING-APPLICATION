<!--CATEGORY VIEW-->
<!--complete logic for category view-->
<% if (title == 'Create Category') { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            <form action="" method="post">
              Category Name:<br>
              <input type="text" name="name" value="Category Name">
              <br><br>
              <input type="submit" value="Create Category">
            </form>
        </div>
    </div>
<% } else if (title == 'Delete Category') { %>
     
<% } else if (title == 'Update Category') { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            <form action="/category/<%= category.id %>/update" method="post">
               Category Name:<br>
              <input type="text" name="name" value="<%= category.name %>">
              <br><br>
              <input type="submit" value="Update Category">
            </form>
        </div>
    </div>
<% } else if (title == 'Category Details') { %>
    <div class="col-sm-8">    
        <div class="">
             <h1>Details of <%= category.name %> Category  </h1>
             <p>I am an category for this ID = <%= category.id %></p>
             <p>Category Name: <%= category.name %></p>
             <a href="/category/<%= category.id %>/update">Edit  Category</a> | <a href="/category/<%= category.id %>/delete">Delete Category</a>
        </div>
        
        <% if(category.Expenses.length == 0) { %>
            <h2>There are no expenses under this category yet </h2>
        <% } else { %>
            <h2>All Expenses in this Category</h2>
            <div class="">
                <ol>
                <% category.Expenses.forEach(function(expense) { %>
                        <li>
                            <p><%= expense.details %><br>
                                Amount - &#8358;<%= expense.amount %><br>
                                Status - <%= expense.status %><br>
                            </p>
                        </li>
                    <br/>
                <% }); %>
                </ol>
            </div>    
         <% } %>  
    </div>
<% } else if (title == 'Category List') { %>
    <div class="col-sm-8">    
        <div class="">
        <ol>
        <% categories.forEach(function(category) { %>
                <li>
                    <h4><a href="/category/<%= category.id %>"><%= category.name %></a></h4>
                     <a href="/category/<%= category.id %>/update">Edit  Category</a> | <a href="/category/<%= category.id %>/delete">Delete Category</a>
                </li>
            <br/>
        <% }); %>
        </ol>
    </div>
        <a href="/blog/category/create"> CLICK HERE TO CREATE CATEGORY</a>

    </div>
<% } else { %>

<% } %>
<!--CATEGORY VIEW END HERE-->