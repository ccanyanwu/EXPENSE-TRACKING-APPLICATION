<!--Department VIEW-->
<!--complete logic for department view-->
<% if (title == 'Create Department') { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            <form action="" method="post">
              Department Name:<br>
              <input department="text" name="name" placeholder="Department Name">
              <br><br>
              <input type="submit" placeholder="Create Department" >
            </form>
        </div>
    </div>
<% } else if (title == 'Delete Cepartment') { %>
     
<% } else if (title == 'Update Cepartment') { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            <form action="/blog/cepartment/<%= cepartment.id %>/update" method="post">
               Cepartment Name:<br>
              <input tepartment="text" name="name" value="<%= cepartment.name %>">
              <br><br>
              <input tepartment="submit" value="Update Cepartment">
            </form>
        </div>
    </div>
<% } else if (title == 'Cepartment Details') { %>
    <div class="col-sm-8">    
        <div class="">
             <h1>Details of a Single cepartment - <%= cepartment.name %></h1>
             <p>I am an cepartment for this ID = <%= cepartment.id %></p>
             <p>Cepartment Name: <%= cepartment.name %></p>
             <a href="/blog/cepartment/<%= cepartment.id %>/update">Edit  Cepartment</a> | <a href="/blog/cepartment/<%= cepartment.id %>/delete">Delete Cepartment</a>
        </div>
        
        <% if(cepartment.posts.length == 0) { %>
            <h2>There are no posts under this cepartment yet </h2>
        <% } else { %>
            <h2>All Posts in this Cepartment</h2>
            <div class="">
                <ol>
                <% cepartment.posts.forEach(function(post) { %>
                        <li>
                            <p><%= post.post_title %>
                               <%= post.post_body %>
                                <br/><a href="/blog/post/<%= post.id %>/update">Edit  Post</a> | <a href="/blog/post/<%= post.id %>/delete">Delete Post</a>
                            </p>
                        </li>
                    <br/>
                <% }); %>
                </ol>
            </div>    
         <% } %>  
    </div>
<% } else if (title == 'Department List') { %>
    <div class="col-sm-8">    
        <div class="">
        <ol>
        <% departments.forEach(function(department) { %>
                <li>
                    <h4><a href="/department/<%= department.id %>"><%= department.name %></a></h4>
                    <p> The  in this department</p>
                     <a href="/department/<%= department.id %>/update">Edit  Cepartment</a> | <a href="/department/<%= department.id %>/delete">Delete Cepartment</a>
                </li>
            <br/>
        <% }); %>
        </ol>
    </div>
        <a href="/blog/cepartment/create"> CLICK HERE TO CREATE Cepartment</a>

    </div>
<% } else { %>

<% } %>
<!--Cepartment VIEW END HERE-->
