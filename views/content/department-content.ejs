<!--Department VIEW-->
<!--complete logic for department view-->
<% if (title == 'Create Department') { %>
    <div class="col-sm-12">    
        <div class="">
            <form action="" method="post" class="w-50  mx-auto">
              <label for="name"><strong class="fs">Department Name</strong></label>
              <input class="iw" department="text" name="name" placeholder="Department Name">
              <input class="ib" type="submit" value="Create Department" >
            </form>
        </div>
    </div>
<% }  else if (title == 'Department List') { %>
    <div class="col-sm-12">    
        <div class="">
        <ol>
        <% departments.forEach(function(department) { %>
                <div class="row">
                    <li class="col-10">
                        <h4><a href="/department/<%= department.id %>"><%= department.name %></a></h4>
                    </li>
                    <div class="col-2 mr-auto">
                        <a href="/department/<%= department.id %>/delete" class="badge badge-danger">Delete</a>
                    </div>
                </div>
            <br/>
        <% }); %>
        </ol>
    </div>
    <a href="/department/create" class="btn btn-primary pill">Add a new Department </a>


    </div>
<% } else { %>

<% } %>
